<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import vue.DigitalClock?>

<AnchorPane fx:id="statutAnchor" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vue.MilkStatutController">
   <children>
      <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <left>
            <ProgressBar fx:id="progress" prefWidth="150.0" progress="0.0" BorderPane.alignment="CENTER" />
         </left>
         <center>
            <Label fx:id="message" text="Message" BorderPane.alignment="CENTER" />
         </center>
         <right>
            <DigitalClock fx:id="timeLabel" text="Date" BorderPane.alignment="CENTER" />
         </right>
      </BorderPane>
   </children>
</AnchorPane>
